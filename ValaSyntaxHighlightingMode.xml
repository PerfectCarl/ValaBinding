	<!-- Style rules -->
	<Rule name = "String">
		<Delimiters></Delimiters>
		<Match color ="String(Escape)">\\(['"\\abfnrtv]|x[0-9a-fA-F]{2,4}|0\d\d)</Match>
	</Rule>

	<Rule name = "VerbatimString">
		<Delimiters></Delimiters>
	</Rule>

	<Rule name = "VerbatimString2">
		<Delimiters></Delimiters>
	</Rule>
	
	<Rule name = "Comment">
		<Keywords color="Comment Tag" ignorecase="True">
			<Word>TODO</Word>
			<Word>FIXME</Word>
			<Word>HACK</Word>
			<Word>UNDONE</Word>
		</Keywords>
	</Rule>

